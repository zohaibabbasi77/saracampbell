{
  "components/common/subscription-form": "<h5>Save 10% When You Subscribe!</h5>\n{{#if settings.show_newsletter_summary }}\n    <div class=\"footer-newsletter-summary\"><p>{{settings.newsletter_summary}}</p></div>\n{{/if}}\n\n<form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\n    <fieldset class=\"form-fieldset\">\n        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n        <input type=\"hidden\" name=\"check\" value=\"1\">\n        <div class=\"form-field\">\n            <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\n            <div class=\"form-prefixPostfix wrap\">\n                <div class=\"\">\n                <div class=\"col-1-6\">\n                    <div class=\"field-wrap\">\n                        <label class=\"\">\n                            Full Name\n                          </label>\n                        <input class=\"form-input\" id=\"nl_name\" name=\"nl_name\" type=\"name\" value=\"{{customer.email}}\">\n                    </div>\n                </div>\n                <div class=\"col-1-6\">\n                    <div class=\"field-wrap p-l-5\">\n                        <label class=\"\">\n                            Email\n                          </label>\n                        <input class=\"form-input\" id=\"nl_email\" name=\"nl_email\" type=\"email\" value=\"{{customer.email}}\">\n                    </div>\n                </div>\n                <div class=\"clear\"></div>\n                <div class=\"col-1-12\">\n                    <div class=\"field-wrap\">\n                        <label class=\"\">\n                            Message\n                          </label>\n                        <textarea class=\"form-textarea\" id=\"nl_message\" name=\"nl_message\" value=\"{{customer.email}}\"></textarea>\n                    </div>\n                </div>\n                </div>\n                <div class=\"subscribe-btn\"><input class=\"form-prefixPostfix-button--postfix\" type=\"submit\" value=\"{{lang 'GET IN TOUCH'}}\"></div>\n            </div>\n        </div>\n    </fieldset>\n</form>\n"
}
